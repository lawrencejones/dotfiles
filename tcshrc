# Set to the debian colors
set PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]\[\033[01;34m\]\w \$\[\033[00m\] '

# Set the ls folder and file color support
set CLICOLOR=1
set LSCOLORS=GxFxCxDxBxegedabagaced

# If got colors then evaluate them
set theme='molokai'
eval `dircolors -c ~/.dircolors/dircolors.$theme`

# Set coloring automatically
alias ls ls -F --color=auto

# Source aliases
source ~/.tcsh_aliases

