### CONFIGURE PROMPT ###########################################################
_trunc_path()
{
  #   How many characters of the $PWD should be kept
  local pwdmaxlen=30
  local wd=$1

  #   Indicator that there has been directory truncation:
  local trunc_symbol="..."
  if [ "${#wd}" -gt $pwdmaxlen ]
  then
    local pwdoffset=$(( ${#wd} - $pwdmaxlen ))
    newPWD=`echo -e ${trunc_symbol}${wd:$pwdoffset:$pwdmaxlen} | sed 's/^\.\.\.\([^/]*\)/.../g'`
  else
    newPWD=$wd
  fi
  echo -e $newPWD | sed 's/\\//g'
}

_python_virt_env()
{
  [ -n "$VIRTUAL_ENV" ] && echo "🐍 ($(basename $VIRTUAL_ENV)) "
}

_pwd_ps1()
{
  # Include -P to resolve symlinks
  local wd="$(pwd | sed 's/ /\\ /g')" # -P`

  local git_root=`git rev-parse --show-toplevel 2>/dev/null`
  if [ -n "$git_root" ];
  then # ON GIT
    local basedir=`dirname "$git_root"`
    wd='...'${wd#$basedir}
  fi
  echo -e `_trunc_path "$wd"`
}

_git_ps1()
{
  branch=$(git branch 2>/dev/null | perl -wnl -e '/(?<=\*\s).*/ and print $&;')
  [ -n "$branch" ] && echo " %{$WHITE%}on %{$PINK%}($branch)"
}

# Configure host, allow for alias is provided
HOST=`hostname`
[ -e ~/.hostname ] && source ~/.hostname

# Set to the debian colors
PROMPT="%{$PINK%}%n%{$CLRCOL%} "                      # username
PROMPT=$PROMPT"%{$WHITE%}at %{$ORANGE%}$HOST "        # hostname
PROMPT=$PROMPT"%{$WHITE%}in %{$GREEN%}"'$(_pwd_ps1)'  # working dir
PROMPT=$PROMPT'$(_git_ps1) '$'\n'                     # git branch
PROMPT=$PROMPT"%{$WHITE%}$ %{$CLRCOL%}%{$GREY%}"      # $ > grey

